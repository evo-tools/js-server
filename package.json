{
	"name": "@evojs/http",
	"version": "0.2.2",
	"description": "Nodejs server MVC framework",
	"license": "MIT",
	"main": "index.js",
	"typings": "index.d.ts",
	"scripts": {
		"prebuild": "rm -rf dist/",
		"build": "tsc --build tsconfig.build.json && node tools/build.js",
		"prepublishOnly": "npm run build && npm run test && node tools/prepublish.js",
		"release": "RELEASE_MODE=1 npm run prepublishOnly && npm publish --access public dist/",
		"test": "jest --coverage --detectOpenHandles",
		"lint": "eslint \"src/**/*.ts\" -f codeframe"
	},
	"dependencies": {
		"content-type": "^1.0.4",
		"formidable": "^1.2.2",
		"querystring": "^0.2.0",
		"unpipe": "^1.0.0"
	},
	"devDependencies": {
		"@evojs/eslint-plugin": "^0.1.0",
		"@evojs/http-client": "^0.1.0",
		"@evojs/validator": "^0.1.1",
		"@types/content-type": "^1.1.3",
		"@types/formidable": "^1.0.32",
		"eslint": "^7.16.0",
		"form-data": "^3.0.0",
		"glob": "^7.1.6",
		"jest": "^26.6.3",
		"reflect-metadata": "^0.1.13",
		"ts-jest": "^26.4.4",
		"typescript": "^4.1.3"
	},
	"peerDependencies": {
		"@evojs/validator": ">=0.1.0",
		"reflect-metadata": ">=0.1.13"
	},
	"engines": {
		"node": "^10.12.0 || >=12.0.0"
	},
	"jest": {
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.ts"
		],
		"moduleFileExtensions": [
			"js",
			"ts"
		],
		"rootDir": "./",
		"testEnvironment": "node",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(ts|js)$": "ts-jest"
		},
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.spec.json"
			}
		}
	},
	"nodemonConfig": {
		"ignore": [
			".git/",
			".vscode/",
			"node_modules/",
			"dist/",
			"coverage/"
		],
		"exec": "npm run test",
		"ext": "ts"
	},
	"author": {
		"name": "Shamil Sultanov",
		"email": "evo@sultanov.io",
		"url": "http://evo.sultanov.io"
	},
	"keywords": [
		"nodejs",
		"mvc",
		"server",
		"framework"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/evotool/js-http.git"
	},
	"bugs": {
		"url": "https://github.com/evotool/js-http/issues"
	},
	"homepage": "https://github.com/evotool/js-http#readme"
}
